<!DOCTYPE html>
<html>
  <head>
    <title>RestaurantsReview</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>
  <nav>
    <ul>
      <% if user_signed_in? %>
        <li><%= link_to 'Sign Out', destroy_user_session_path, method: :delete %></li>
      <% end %>
    </ul>
  </nav>
  <body>
    <% flash.each do |key, value| %>
      <%= value %>
    <% end %>

    <%= yield %>
  </body>
</html>
